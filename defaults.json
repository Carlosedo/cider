{
    "NSGlobalDomain": {
        "AppleShowScrollBars": "WhenScrolling",
        "NSDocumentSaveNewDocumentsToCloud": false,
        "NSNavPanelExpandedStateForSaveMode": true,
        // Don't repeat character when holding key, show special characters instead
        "ApplePressAndHoldEnabled": true,
        "AppleShowAllExtensions": true,
        "WebKitDeveloperExtras": true,
        "NSQuitAlwaysKeepsWindows": false,
        // Enable full keyboard access for all controls (e.g. enable Tab in modal dialogs)
        "AppleKeyboardUIMode": true,
        // Set a blazingly fast keyboard repeat rate
        "KeyRepeat": 0,
        "NSCloseAlwaysConfirmsChanges": true,
        "com.apple.swipescrolldirection": false

    },
    "Apple Global Domain": {
        "com.apple.sound.beep.feedback": 0,
    },
    "com.apple.finder": {
        "NewWindowTarget": "PfHm",
        // Allow text selection in Quick Look
        "QLEnableTextSelection": true,
        // Search in current directory by default
        "FXDefaultSearchScope": "SCcf",
        "FXEnableExtensionChangeWarning": false,
        // Set column view as preferred view style
        "FXPreferredViewStyle": "clmv",
        "FK_AppCentricViewStyle": "clmv",
        "FXArrangeGroupViewBy": "Name",
        "FXPreferredGroupBy": "Name",
        "ShowPathbar": true,
        "QuitMenuItem": true,
        // Display full paths as Finder window titles
        "_FXShowPosixPathInTitle": "YES"
    },
    "com.apple.SoftwareUpdate": {
        // Search for updates weekly
        "ScheduleFrequency": 1
    },
    "com.apple.screencapture": {
        "type": "png"
    },
    "com.apple.screensaver": {
        "askForPassword": 1,
        "askForPasswordDelay": 0
    },
    "defaults write com.apple.menuextra.battery": {
        "ShowPercent": "YES"
    },
    "com.apple.SoftwareUpdate": {
        "ScheduleFrequency": 1
    },
    "com.apple.desktopservices": {
        // Avoid creating .DS_Store files on network volumes
        "DSDontWriteNetworkStores": true
    },
    "com.apple.dock": {
        // Show opened apps
        "show-process-indicators": true,
        // Don't show Dashboard as a Space
        "dashboard-in-overlay": true,
        // Don't automatically rearrange Spaces based on most recent use
        "mru-spaces": false,
        "autohide": true,
        "tilesize": 37,
        "magnification": true,
        "largesize": 67
    },
    "com.apple.dashboard": {
        // Disable dashboard
        "mcx-disabled": true
    },
    "com.apple.TextEdit": {
        "RichText": 0,
        "PlainTextEncoding": 4,
        "PlainTextEncodingForWrite": 4
    },
    "com.apple.TimeMachine": {
        "DoNotOfferNewDisksForBackup": true
    },
    "com.apple.frameworks.diskimages": {
        "skip-verify": true,
        "skip-verify-locked": true,
        "skip-verify-remote": true
    },
    "com.apple.NetworkBrowser": {
        // Enable AirDrop over Ethernet and on unsupported Macs running Lion
        "BrowseAllInterfaces": true
    },
    "com.apple.AppleMultitouchTrackpad": {
        // Tap to click
        "Clicking": true,
        "TrackpadThreeFingerDrag": true,
        "TrackpadThreeFingerVertSwipeGesture": 0,
        "TrackpadThreeFingerHorizSwipeGesture": 0,
        "TrackpadFourFingerVertSwipeGesture": 2,
        "TrackpadThreeFingerHorizSwipeGesture": 2
    },
    "com.apple.driver.AppleBluetoothMultitouch.trackpad": {
        "Clicking": true,
        "TrackpadThreeFingerDrag": true,
        "TrackpadThreeFingerVertSwipeGesture": 0,
        "TrackpadThreeFingerHorizSwipeGesture": 0,
        "TrackpadFourFingerVertSwipeGesture": 2,
        "TrackpadThreeFingerHorizSwipeGesture": 2
    }
}
